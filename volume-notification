#!/bin/zsh

pidof reentrant-progress-notificator

if [[ $? == 1 ]]
then
    reentrant-progress-notificator 2 $(pamixer --get-volume)
else
    if [[ $1 == "up" ]]
    then
        reentrant-progress-notificator + $(pidof reentrant-progress-notificator)
    elif [[ $1 == "down" ]]
    then
        reentrant-progress-notificator - $(pidof reentrant-progress-notificator)
    fi
fi

